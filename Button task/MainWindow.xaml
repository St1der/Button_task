<Window x:Class="Button_task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Button_task"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="color">
            <Button  Canvas.Top="20" Canvas.Left="100" Height="100" Width="150" Content="1" FontSize="40" Background="Orange" Click="Button_Click"/>
            <Button Name="b2" Canvas.Top="20" Canvas.Left="300" Height="100" Width="150" Content="2" FontSize="40" Background="Pink" Click="Button_Click" />
            <Button Name="b3" Canvas.Top="20" Canvas.Left="500" Height="100" Width="150"  Click="Button_Click" Content="3" FontSize="40" Background="SkyBlue" />
            <Button Name="b4" Canvas.Bottom="20" Canvas.Left="100" Height="100" Width="150" Content="4" FontSize="40" Background="Red"  Click="Button_Click" />
            <Button Name="b5" Canvas.Bottom="20" Canvas.Left="300" Height="100" Width="150" Content="5" FontSize="40" Background="#7D0790" Click="Button_Click" />

            <Button Name="b6" Canvas.Bottom="20" Canvas.Left="500" Height="100" Width="150" Content="6" FontSize="40" Background="#99959A" Click="Button_Click" />
        </Canvas>



    </Grid>
</Window>
